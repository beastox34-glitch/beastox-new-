  <!-- Floating Beast AI (offline demo) -->
  <div class="fab" aria-label="Beast AI">
    <div class="fab-panel" id="fabPanel">
      <div class="chat">
        <div class="chat-head">
          <div>
            <b>Beast AI (Demo)</b>
            <small>Ask about gear, macros, or buying</small>
          </div>
          <button class="btn btn-ghost" style="padding:10px 12px;" onclick="toggleChat();" aria-label="Close">
            <i class="fa-solid fa-xmark"></i>
          </button>
        </div>
        <div class="chat-body" id="chatBody">
          <div class="msg"><div class="bubble">üëã Welcome to BeastOx. Type: <b>meal</b>, <b>calories</b>, <b>chalk</b>, <b>straps</b>, <b>belt</b>, or <b>amazon</b>.</div></div>
        </div>
        <div class="chat-foot">
          <input id="chatInput" type="text" placeholder="Ask Beast AI‚Ä¶" onkeydown="if(event.key==='Enter'){sendChat();}" />
          <button class="btn btn-primary" onclick="sendChat();"><i class="fa-solid fa-paper-plane"></i></button>
        </div>
      </div>
    </div>

    <button class="fab-btn" onclick="toggleChat();" title="Beast AI">
      <i class="fa-solid fa-brain"></i>
    </button>
  </div>

  <script>
    // ===== Helpers =====
    const $ = (id) => document.getElementById(id);
    $('year').textContent = new Date().getFullYear();

    function round(n){ return Math.round(n); }

    // ===== Calculator (Mifflin-St Jeor) =====
    // BMR male = 10W + 6.25H - 5A + 5
    // BMR female = 10W + 6.25H - 5A - 161
    function calculate(){
      const sex = $('sex').value;
      const goal = $('goal').value;
      const age = parseFloat($('age').value);
      const height = parseFloat($('height').value);
      const weight = parseFloat($('weight').value);
      const activity = parseFloat($('activity').value);

      if(!age || !height || !weight) return;

      let bmr = (10*weight) + (6.25*height) - (5*age) + (sex === 'male' ? 5 : -161);
      let tdee = bmr * activity;

      // goal adjustment
      let target = tdee;
      let goalText = 'Maintenance';
      if(goal === 'cut'){ target = tdee * 0.85; goalText = 'Fat Loss (Cut)'; }
      if(goal === 'bulk'){ target = tdee * 1.10; goalText = 'Lean Bulk'; }

      // protein target: 1.8g/kg (cut), 1.6g/kg (maintain), 2.0g/kg (bulk)
      let p = weight * (goal === 'cut' ? 1.8 : (goal === 'bulk' ? 2.0 : 1.6));
      // fat target: 0.8g/kg (cut), 0.9 (maintain), 1.0 (bulk)
      let f = weight * (goal === 'cut' ? 0.8 : (goal === 'bulk' ? 1.0 : 0.9));
      // carbs remaining
      const caloriesP = p * 4;
      const caloriesF = f * 9;
      let calsLeft = target - (caloriesP + caloriesF);
      let c = Math.max(0, calsLeft / 4);

      // Update UI
      $('calcResult').style.display = 'block';
      $('calcSubtitle').textContent = `Goal: ${goalText} ‚Ä¢ Estimated maintenance: ${round(tdee)} kcal/day`;

      const chips = [
        `Target Calories: ${round(target)} kcal`,
        `Protein: ${round(p)} g`,
        `Carbs: ${round(c)} g`,
        `Fat: ${round(f)} g`
      ];
      $('calcChips').innerHTML = chips.map(x => `<span class="chip">${x}</span>`).join('');

      // Save target for meal plan
      $('targetCals').value = round(target);

      // Product recommendations (simple logic)
      const rec = [];
      rec.push('If your training includes heavy pulls ‚Üí <b>Wrist Straps</b>.');
      rec.push('If grip fails before muscles ‚Üí <b>Liquid Chalk</b>.');
      rec.push('If bracing limits your squat/deadlift ‚Üí <b>Lever Belt</b>.');
      if(goal === 'bulk') rec.push('For recovery & growth ‚Üí (Upcoming) <b>Whey + Creatine</b>.');
      if(goal === 'cut') rec.push('For adherence ‚Üí high-protein meals + (Upcoming) clean <b>Whey Isolate</b>.');

      $('recProducts').innerHTML = `<b>Recommended (based on your goal):</b><br>‚Ä¢ ${rec.join('<br>‚Ä¢ ')}`;
    }

    function fillExample(){
      $('sex').value = 'male';
      $('goal').value = 'bulk';
      $('age').value = 24;
      $('height').value = 178;
      $('weight').value = 80;
      $('activity').value = '1.55';
      calculate();
    }

    function useCalcCalories(){
      const shown = $('calcResult').style.display !== 'none';
      if(!shown){
        alert('Run the calorie calculator first, then click this.');
        return;
      }
      // targetCals is already updated by calculate()
      document.getElementById('planBox')?.scrollIntoView({behavior:'smooth'});
    }

    // ===== Meal plan generator (simple templates) =====
    function makeMealPlan(){
      const diet = $('diet').value;
      const meals = parseInt($('meals').value, 10);
      const train = $('train').value;
      const target = parseInt($('targetCals').value, 10);

      const perMeal = Math.round(target / meals);

      const veg = [
        'Breakfast: Oats + milk/curd + banana + peanuts (or whey when launched)',
        'Meal: Paneer/tofu + rice/roti + salad',
        'Snack: Greek yogurt/curd + fruit',
        'Meal: Dal + roti + sabzi + ghee (small)',
        'Post-workout: Banana + milk + (future) whey'
      ];
      const nonveg = [
        'Breakfast: Eggs + toast/poha + fruit',
        'Meal: Chicken/fish + rice + salad',
        'Snack: Curd + nuts OR peanut butter sandwich',
        'Meal: Dal + roti + chicken curry (lean) + veggies',
        'Post-workout: Banana + milk + (future) whey'
      ];
      const highprotein = [
        'Breakfast: Omelette/paneer bhurji + fruit',
        'Meal: Lean protein (chicken/paneer/tofu) + rice + salad',
        'Snack: Curd/Greek yogurt + nuts',
        'Meal: Dal + extra protein portion + veggies',
        'Post-workout: (future) Whey + banana'
      ];

      let base = veg;
      if(diet === 'nonveg') base = nonveg;
      if(diet === 'highprotein') base = highprotein;

      // adjust number of meals (trim/extend)
      const plan = [];
      for(let i=0;i<meals;i++){
        plan.push(base[i % base.length]);
      }

      // training timing hint
      const timing = (train === 'morning')
        ? 'Tip: Keep carbs higher in breakfast + post-workout.'
        : 'Tip: Keep carbs higher in pre-workout snack + dinner/post-workout.';

      $('planBox').style.display = 'block';
      $('planMeta').textContent = `${target} kcal/day ‚Ä¢ ~${perMeal} kcal per meal ‚Ä¢ ${diet.toUpperCase()} ‚Ä¢ Training: ${train}`;

      $('planText').innerHTML = plan.map((line, idx) => `<b>Meal ${idx+1}:</b> ${line}<br>`).join('')
        + `<br><b>${timing}</b><br><span class="muted">(Swap foods based on preference. Keep protein high and track weekly progress.)</span>`;
    }

    // ===== Newsletter (demo) =====
    function subscribe(){
      const email = $('email').value.trim();
      if(!email || !email.includes('@')){
        alert('Please enter a valid email.');
        return;
      }
      alert('‚úÖ You are subscribed (demo). Connect Shopify/Klaviyo later for real emails.');
      $('email').value = '';
    }

    // ===== Floating chat (offline demo) =====
    function toggleChat(){
      const p = $('fabPanel');
      const isOpen = p.style.display === 'block';
      p.style.display = isOpen ? 'none' : 'block';
      if(!isOpen){
        setTimeout(() => $('chatInput').focus(), 120);
      }
    }

    function addMsg(text, mine=false){
      const body = $('chatBody');
      const div = document.createElement('div');
      div.className = 'msg' + (mine ? ' me' : '');
      div.innerHTML = `<div class="bubble">${text}</div>`;
      body.appendChild(div);
      body.scrollTop = body.scrollHeight;
    }

    function sendChat(){
      const input = $('chatInput');
      const q = input.value.trim();
      if(!q) return;
      addMsg(q, true);
      input.value = '';

      const t = q.toLowerCase();
      let a = "I'm Beast AI (demo). Try: meal, calories, chalk, straps, belt, amazon.";

      if(t.includes('cal')) a = "Use the <b>Calorie & Macro Calculator</b> above. Then click <b>Generate Meal Plan</b>.";
      else if(t.includes('meal')) a = "Go to <b>Free 1-Day Meal Plan Generator</b>. Pick veg/non-veg, meals/day, target calories. Boom.";
      else if(t.includes('chalk')) a = "If grip fails before muscles: <b>Liquid Chalk</b>. Fast dry, low mess, stable grip.";
      else if(t.includes('strap')) a = "For heavy pulls & rows: <b>Wrist Straps</b>. Less grip fatigue ‚Üí more reps.";
      else if(t.includes('belt')) a = "For bracing & heavy compounds: <b>Lever Belt</b>. Consistent tightness every set.";
      else if(t.includes('amazon')) a = "We sell on Amazon too. Add your exact Amazon links inside this HTML file for each product button.";

      setTimeout(()=> addMsg(a,false), 350);
    }
  </script>
</body>
</html>
